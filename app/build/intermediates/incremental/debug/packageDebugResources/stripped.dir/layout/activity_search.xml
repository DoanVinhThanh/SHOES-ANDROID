<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.ShopFragment"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_back_shop_to_home"
                android:layout_width="30dp"
                android:layout_height="43dp"
                android:src="@drawable/baseline_arrow_back_ios_24" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <AutoCompleteTextView
                    android:id="@+id/textField_search"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:hint="Search Product"
                    android:paddingEnd="40dp"
                    android:gravity="center_vertical" />

                <ImageView
                    android:id="@+id/clear_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/baseline_clear_24"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="8dp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_camera"
            android:layout_width="170dp"
            android:layout_height="70dp"
            android:textColor="@color/white"
            android:text="Camera"
            android:background="@drawable/border_dark_light"
            android:drawableStart="@drawable/baseline_photo_camera_24"
            android:paddingStart="16dp"

            />



        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_photos"
            android:layout_width="170dp"
            android:layout_height="70dp"
            android:textColor="@color/white"
            android:layout_marginLeft="20dp"
            android:text="Photos"
            android:background="@drawable/border_dark_light"
            android:drawableStart="@drawable/baseline_photo_library_24"
            android:paddingStart="16dp"

            />
    </LinearLayout>

</RelativeLayout>
